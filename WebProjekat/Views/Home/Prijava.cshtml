
@{
    Layout = null;
    ViewBag.Title = "Prijava";
}

<html>

<header>
    <style>
        html {
            background-color: lightblue;
        }

        .div1 {
            font-family: cursive;
            font-style: italic;
            background-color: black;
            color: white;
            text-align: center;
            width: 100%;
        }

        .tabela1 {
            border: 5px solid;
            background-color: black;
            border-color: white;
            color: white;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
        }

        .blank_row {
            height: 10px
        }

        .div2 {
            text-align: right;
        }

        .button1 {
            background-color: black;
            color: white;
        }

            .button1:hover {
                background-color: gold;
                color: black;
            }

        .input1 {
            background-color: silver;
        }

            .input1:hover {
                background-color: white;
            }
    </style>
</header>

<body>


    <div class="div1">
        <h1>Prijava</h1>

        <div class="div2">
            <button onclick="location.href='@Url.Action("Index","Home")'" class="button1">Vrati se nazad</button>
        </div>

    </div>

    <br />
    <br />
    <br />

    <form method="post" action="/Home/PrijaviKorisnika">
        <table class="tabela1">
            <tr><th colspan="2"><h3>Prijava</h3></th></tr>

            <tr><td>Korisnicko ime:</td><td><input name="korime" class="input1" type="text" /></td></tr>
            <tr class="blank_row"><td></td></tr>
            <tr><td>Lozinka:</td><td><input name="lozinka" class="input1" type="text" /></td></tr>

            <tr class="blank_row"><td> </td></tr>
            <tr class="blank_row"><td> </td></tr>
            <tr><td colspan="2"><input type="submit" class="input1" value="Prijavi se" /></td></tr>
        </table>
    </form>
</body>
</html>

@{
    if (TempData["Greska"] != null)
    {
        <script type="text/javascript">
            alert("@TempData["Greska"]")
        </script>
        TempData["Greska"] = null;
    }
}